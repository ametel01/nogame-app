{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [{
    "files": ["tests/*"], // Or *.test.js
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off"    }
  }
],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "root": true,
  "rules": {}
}
